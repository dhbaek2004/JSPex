package Practice01;

import java.util.Scanner;

public class PickStar9 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int N = sc.nextInt();
		
		for(int i=1; i<=2*N-1; i++) {
			for(int j=1; j<=i; j++) {
				System.out.print("*");
			}
			System.out.println();
			System.out.print(" ");
		}
		
		
		
		
		
		for(int i=1; i>=2*N-1; i++) {
			for(int j=2*N-2; j<=1; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
